#!/bin/bash

if [ "$1" == "start" ]; then
    entorn-start
    exit 0
fi

if [ "$1" == "stop" ]; then
    entorn-stop
    exit 0
fi

if [ "$1" == "restart" ]; then
    entorn-status
    exit 0
fi

if [ "$1" == "mount" ]; then
    entorn-status
    exit 0
fi

if [ "$1" == "update" ]; then
    entorn-update
    exit 0
fi


##
# Color  Variables
##
green='\e[32m'
clear='\e[0m'

##
# Color Functions
##

ColorGreen(){
        echo -ne $green$1$clear
}

echo "Usage:"
echo ""
echo "To start Entorn:"
echo "$(ColorGreen 'entorn start') "
echo ""
echo "To stop Entorn:"
echo "$(ColorGreen 'entorn stop')"
echo ""
echo "To restart Entorn:"
echo "$(ColorGreen 'entorn restart')"
echo ""
echo "To update Entorn:"
echo "$(ColorGreen 'entorn update [version]')"
echo ""
echo "To mount Entorn in your host:"
echo "$(ColorGreen 'entorn mount')"
echo ""



